    //proses
    hasil=(b+c+d)/3;
    if (hasil >= 85) {
        hadiah = "Komputer Core i5";
    }
    else if (hasil >= 70) {
      hadiah = "Uang sebanyak Rp. 2.500,000";
    }
    else {
      hadiah = "Hiburan";
    //output
    }
    cout <<"\nHasil Nilai Rata-Rata = "<<hasil<<endl;
  cout << "Siswa yang bernama" << (cin,a) << endl;
  cout << "Memperoleh nilai rata-rata " << hasil << "dari hasil perlombaan yang diikutinya" << endl;
  cout << "Hadiah yang di dapat adalah "<<hadiah<<endl;
